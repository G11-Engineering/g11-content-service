# ============================================
# Content Service Configuration
# ============================================
# Copy this file to .env and update the values as needed
# All values are optional and have sensible defaults

# ============================================
# Server Configuration
# ============================================
PORT=3002
HOST=0.0.0.0
NODE_ENV=development
API_PREFIX=/api

# ============================================
# Frontend Configuration
# ============================================
# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000
# Comma-separated list of allowed origins (overrides FRONTEND_URL if set)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# Service URLs Configuration
# ============================================
# Content Service (this service)
CONTENT_SERVICE_URL=http://localhost:3002
CONTENT_SERVICE_PROTOCOL=http
CONTENT_SERVICE_HOST=localhost
CONTENT_SERVICE_PORT=3002

# Category Service
CATEGORY_SERVICE_URL=http://category-service:3004
CATEGORY_SERVICE_PROTOCOL=http
CATEGORY_SERVICE_HOST=category-service
CATEGORY_SERVICE_PORT=3004
CATEGORY_SERVICE_TIMEOUT=5000

# Tag Service (can use category service URL if same service)
TAG_SERVICE_URL=http://category-service:3004
TAG_SERVICE_PROTOCOL=http
TAG_SERVICE_HOST=category-service
TAG_SERVICE_PORT=3004
TAG_SERVICE_TIMEOUT=5000

# ============================================
# Database Configuration
# ============================================
# Option 1: Use full connection string
DATABASE_URL=postgresql://user:password@localhost:5432/blog_db

# Option 2: Use individual components (used if DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=blog_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# Database Connection Pool Settings
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=2000

# ============================================
# Authentication & Security
# ============================================
# JWT Secret - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Default User ID (used when user is not authenticated)
DEFAULT_USER_ID=00000000-0000-0000-0000-000000000001

# ============================================
# Rate Limiting Configuration
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later.

# ============================================
# Request Configuration
# ============================================
BODY_SIZE_LIMIT=10mb
URLENCODED_EXTENDED=true

# ============================================
# Scheduler Configuration
# ============================================
SCHEDULER_ENABLED=true
SCHEDULER_CRON_SCHEDULE=* * * * *
SCHEDULER_PUBLISH_ENDPOINT=/api/posts/scheduled/publish

# ============================================
# Health Check Configuration
# ============================================
HEALTH_ENDPOINT=/health
HEALTH_SHOW_URL_IN_LOGS=true

